<h2>{{client.name}}</h2>
<table class="headerOnLeft">
  <tbody>

    <tr>
      <th>
        Email
      </th>
      <td>
        <a href="mailto:{{client.email}}">{{client.email}}</a>
      </td>
    </tr>
    <tr>
      <th>
        Imię
      </th>
      <td>
        {{client.name}}
      </td>
    </tr>
    <tr>
      <th>
        Data następnego kontaktu
      </th>
      <td>
        {{client.nextContactAt}}
      </td>
    </tr>
    {{#if client.notes}}
      <tr>
        <th>
          Notatki
        </th>
        <td>
          {{client.notes}}
        </td>
      </tr>
    {{/if}}
  </tbody>
</table>

<p>
    <a href="/client/form/edit/{{client.id}}">Edytuj klienta</a>
</p>

<p>
    {{> go-to-clients}}
</p>
